#include<stdio.h>

int main() {
	printf ("Pleas choose your drink \n")
	printf ("1-Cappuchino 2-Americano 3-Espresso \n");
	int button;
	fflush (stout);
	scanf ("%d", &button);
	barista(button);


	return 0;
}

void barista(int button){
if(button ==1){
	cappuchino
}
if(button==2){
	americano
}
if(button==3){
	espresso
}

}
