void printStarsSquare(int stars){
	int i, j;
	for(j=1; j<=stars; j++){
		for(i=1; i<=stars; i++){

		if(i==1 || j==1 || i==stars || j==stars){
			printf("* ");
		}else{
			printf(" ");
		}
	}
	printf("\n");
	}


}

